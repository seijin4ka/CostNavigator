{
  "name": "cost-navigator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/prepare-deploy.js",
    "build:local": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "db:migrate:local": "wrangler d1 execute cost-navigator-db --local --file",
    "db:migrate:remote": "wrangler d1 execute cost-navigator-db --remote --file",
    "db:migrate:all": "for f in migrations/*.sql; do npm run db:migrate:remote -- \"$f\"; done",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && echo 'ローカルデータベースをリセットしました。マイグレーションを再実行してください。'",
    "db:backup": "wrangler d1 export cost-navigator-db --output backup-$(date +%Y%m%d-%H%M%S).sql"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.0",
    "react-router-dom": "^7.1.0",
    "zod": "^3.24.0",
    "@react-pdf/renderer": "^4.3.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.0.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "wrangler": "^3.105.0"
  }
}
